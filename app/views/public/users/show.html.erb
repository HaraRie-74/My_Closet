<div class="container">
  <div class="row my-5">
    <h1 class="offset-4">会員情報詳細</h1>
  </div>
  <div class="row">
    <div class="col-5">
      <%= image_tag @user.get_profile_image(200,200) %>
    </div>
    <div class="col-5">
      <%= link_to image_tag('closet.png', width: 200, height: 110), closet_index_path(@user.id) %>
      <table class="table mt-5">
        <tbody>
          <tr>
            <td>ユーザー名</td>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <td>自己紹介</td>
            <td><%= @user.introduction %></td>
          </tr>
          <tr>
            <td>フォロー中</td>
            <td><%= link_to @user.following.count, following_user_path(@user) %></td>
          </tr>
          <tr>
            <td>フォロワー</td>
            <td><%= link_to  @user.follows.count, follows_user_path(@user) %></td>
          </tr>
          <tr>
            <td colspan="2">
              <%= link_to "いいね一覧", favorite_user_path(current_user), class:"btn btn-outline-warning" %> &emsp;
              <%= render 'follow_button', user: @user %>
            </td>
          </tr>
          <tr>
            <td colspan="2">
              <% if @user.name != "guestuser" %>
                <%= link_to "会員情報編集", edit_user_path(@user.id), class:"btn btn-secondary" %>
                <%= link_to "退会する", quit_check_user_path(@user.id), class:"btn btn-danger" %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
