<div class="container">
  <div class="row mt-5 mb-3">
    <h1 class="offset-1 col-10 my-auto">新規会員登録</h1>
  </div>
  <div class="row">
    <div class="offset-1 col-10">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :name, "名前" %><br />
        <%= f.text_field :name, autofocus: true, class:"col-lg-4" %>
      </div>

      <div class="field mt-2">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autocomplete: "email", class:"col-lg-6" %>
      </div>

      <div class="field mt-2">
        <%= f.label :password, "パスワード" %>
        <% if @minimum_password_length %>
        <em>(英数字のみ・６文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class:"col-lg-6" %>
      </div>

      <div class="field mt-2">
        <%= f.label :password_confirmation, "パスワード（確認用）" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"col-lg-6" %>
      </div>

      <div class="actions my-5">
        <%= f.submit "会員登録", class:"btn btn-primary col-lg-6" %>
      </div>
    <% end %>

    <%= render "public/shared/links" %>

  </div>
</div>
