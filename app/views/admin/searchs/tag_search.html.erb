<h1>「<%= @tag.tag_name %>」タグの投稿一覧</h1>
<%= form_with url:tag_search_path(tag.id), method: :get do |f| %>
  <%= f.text_field :content %>
  <%= f.submit "検索" %>
<% end %>
<%= render 'public/users/closet_index',
  spring_all: @spring_all,
  summer_all: @summer_all,
  autumn_all: @autumn_all,
  winter_all: @winter_all,
  other_all: @other_all %>