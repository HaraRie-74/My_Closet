<div class="container">
  <div class="row">
    <%= form_with model: [@closet, @tag], url:closet_tags_path(@closet.id), method: :post do |f| %>
      <%= f.text_field :tag_name %>
      <%= f.submit "タグ追加" %>
    <% end %>
    <% @closet_tags.each do |closet_tag| %>
      <%= closet_tag.tag.tag_name %> <%= link_to "×", closet_tag_path(@closet.id, closet_tag.tag.id) %>
    <% end %>
    <%= link_to "投稿する", closet_path(@closet.id), class:"btn btn-primary" %>
  </div>
</div>