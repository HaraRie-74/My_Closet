  <div id="tab-contents">
    <div id="tab1" class="tab spring">
      <% spring_all.each do |spring| %>
        <div class="post">
          <div class="post-image">
            <%= link_to closet_path(spring.id) do %>
              <%= image_tag spring.images[0].variant(resize_to_limit: [250, 250]).processed %>
            <% end %>
          </div>
          <div class="post-tag">
            <% spring.tags.each do |tag| %>
              <%= link_to tag_search_path(tag_id: tag.id, user_num: user_number) do %>
                <i class="fas fa-tag"></i><%= tag.tag_name %>
              <% end %>&ensp;
            <% end %>
          </div>
          <div class="post-fav" id="favorite_btn_<%= spring.id %>">
            <%= render 'public/favorites/favorite', obj: spring %>
          </div>
          <div class="post-comm">
            <%= spring.closet_comments.count %>コメント
          </div>
        </div>
      <% end %>
