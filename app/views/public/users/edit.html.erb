<div class="container">
  <div class="row">
    <div class="col-5"></div>
    <div class="col-5">
      <h1>会員情報編集ページ</h1>
      <%= form_with model: @user, url:user_path(@user.id), method: :patch do |f| %>
        <% f.label :name %>
        <%= f.text_field :name %>
        <% f.label :introduction %>
        <%= f.text_area :introduction %>
        <%= f.file_field :profile_image, accept:"image/*" %>
        <%= f.submit "会員情報更新" %>
      <% end %>
    </div>
  </div>
</div>
