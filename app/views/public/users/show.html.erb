<%= flash[:notice] %>
<div class="container">
  <div class="row my-5">
    <div class="col-12 text-center">
      <h1><strong>会員情報詳細</strong></h1>
    </div>
  </div>
  <div class="row">
    <!--<div class="col-12 text-center">-->
      <!--<div class="row">-->
      <div class="profile-image mb-5 col-lg-5 col-sm-12 sm-offset-5">
        <%= image_tag @user.get_profile_image(200,200) %>
      </div>
      <div class="col-lg-5 col-sm-12">
        <%= link_to image_tag('closet.png', width: 200, height: 110), closet_index_path(@user.id) %>
        <table class="table mt-5">
          <tbody>
            <tr>
              <td width="200">ユーザー名</td>
              <td width="300"><%= @user.name %></td>
            </tr>
            <tr>
              <td>自己紹介</td>
              <td height="100" style="word-break:break-word"><%= @user.introduction %></td>
            </tr>
            <tr>
              <td>フォロー中</td>
              <td id="following_count_<%= @user.id %>">
                <%= render 'public/relationships/following_count', user: @user %>
              </td>
            </tr>
            <tr>
              <td>フォロワー</td>
              <td id="follows_count_<%= @user.id %>">
                <%= render 'public/relationships/follows_count', user: @user %>
              </td>
            </tr>
            <tr>
              <td colspan="2">
                <%= link_to "いいね一覧", favorite_user_path(@user.id), class:"btn btn-outline-warning" %> &emsp;
                <span id="follow_button_<%= @user.id %>">
                  <%= render 'follow_button', user: @user %>
                </span>
              </td>
            </tr>
            <tr>
              <td colspan="2">
                <% if @user.name != "guestuser" && @user == current_user %>
                  <%= link_to "会員情報編集", edit_user_path(@user.id), class:"btn btn-secondary" %>
                  <%= link_to "退会する", quit_check_user_path(@user.id), class:"btn btn-danger" %>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      <!--</div>-->
    <!--</div>-->
    </div>
  </div>
</div>
