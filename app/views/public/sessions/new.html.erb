<div class="container">
  <div class="row mt-5 mb-3">
    <h1 class="offset-1 col-10 my-auto">ログイン</h1>
  </div>
  <div class="row">
    <div class="offset-1 col-10">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-lg-6" %>
        </div>

        <div class="field mt-2">
          <%= f.label :password, "パスワード" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class:"col-lg-6" %>
        </div>

        <!--<% if devise_mapping.rememberable? %>-->
        <!--  <div class="field">-->
        <!--    <%= f.check_box :remember_me %>-->
        <!--    <%= f.label :remember_me %>-->
        <!--  </div>-->
        <!--<% end %>-->

        <div class="actions my-5">
          <%= f.submit "ログイン", class:"btn btn-primary col-lg-6" %>
        </div>
      <% end %>

      <%= render "public/shared/links" %>
    </div>
  </div>
</div>
