<div class="container">
<% if @model == 'user' %>
  <h1 class="mt-5">【会員の検索結果】検索ワード：<%= @content %></h1>
  <div class="offset-1 mt-3 mb-5">
    <%= render 'admin/searchs/user_search' %>
  </div>
  <% if @records.present? %>
    <%= render 'admin/users/user_index', users: @records %>
  <% else %>
    <p>データはありません</p>
  <% end %>
<% elsif @model == 'closet' %>
  <h1 class="mt-5">【Closetの検索結果】検索ワード：<%= @content %></h1>
  <div class="offset-1 mt-3 mb-5">
    <%= render 'admin/searchs/closet_search' %>
  </div>
  <% if @records.present? %>
    <%= render 'admin/closets/closet_index',
      user_number: @user_number,
      spring_all: @spring_all,
      summer_all: @summer_all,
      autumn_all: @autumn_all,
      winter_all: @winter_all,
      other_all: @other_all %>
  <% else %>
    <p>データはありません</p>
  <% end %>
<% end %>
</div>